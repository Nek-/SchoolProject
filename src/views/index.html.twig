{% extends 'body.html.twig' %}


{% block content %}
    <h1>Hello</h1>
    <a href="#" id="swag" class="btn btn-success">Ajouter une ligne</a>
    {{ form(form) }}
    <script>
        $('document').ready(function () {
            var $invoiceLines = $('#invoice_lines');
            var id = 1;

            $('#swag').click(function () {
                $invoiceLines.append($invoiceLines.data('prototype').replace(/__name__/g, id).replace(/label__/g, ' Invoice Line '));
                id++;

                return false;
            });
        });
    </script>
{% endblock content %}
